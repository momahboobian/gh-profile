// schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Graduate {
  id        Int @id @default(autoincrement())
  fullName  String?
  github    String?
  avatar    String?
  linkedin  String?
  role      String ? 
  cohort    String?
  CV        String?
  coverLetter String?
  gitFP     String?
  demoFP    String?
}

